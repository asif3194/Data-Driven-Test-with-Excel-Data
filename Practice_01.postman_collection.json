				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsondata = pm.response.json()\r",
							"\r",
							"pm.test(\"Fist Name Validation\", function(){\r",
							"  pm.expect(pm.iterationData.get(\"firstname\")).to.equal(jsondata.firstname)\r",
							"})\r",
							"\r",
							"pm.test(\"Last Name Validation\", function(){\r",
							"    pm.expect(pm.iterationData.get(\"lastname\")).to.equal(jsondata.lastname)\r",
							"})\r",
							"\r",
							"pm.test(\"Total Price Validation\", function(){\r",
							"    pm.expect(pm.iterationData.get(\"price\")).to.equal(jsondata.totalprice)\r",
							"})\r",
							"\r",
							"pm.test(\"Depositpaid Validation\", function(){\r",
							"    pm.expect(pm.iterationData.get(\"paid\")).to.equal(jsondata.depositpaid)\r",
							"})\r",
							"// Convert depositpaid to a boolean before comparing\r",
							"pm.test(\"Deposit Paid Validation\", function(){\r",
							"    pm.expect(pm.iterationData.get(\"paid\") === \"true\").to.eql(jsondata.depositpaid);\r",
							"});\r",
							"\r",
							"pm.test(\"Check In Validation\", function(){\r",
							"    pm.expect(pm.iterationData.get(\"checkin\")).to.eql(jsondata.bookingdates.checkin);\r",
							"});\r",
							"\r",
							"pm.test(\"Check Out Validation\", function(){\r",
							"    pm.expect(pm.iterationData.get(\"checkout\")).to.eql(jsondata.bookingdates.checkout);\r",
							"});\r",
							"\r",
							"pm.test(\"Additional Needs Validation\", function(){\r",
							"    pm.expect(pm.iterationData.get(\"need\")).to.eql(jsondata.additionalneeds);\r",
							"});\r",
							""
